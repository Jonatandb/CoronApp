<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_item"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <TextView
        android:id="@+id/textViewPais"
        style="@style/LabelStyleImportantnoBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewFlag"
        app:layout_constraintTop_toTopOf="@+id/imageViewFlag"
        tools:text="China" />

    <TextView
        android:id="@+id/textViewCountriesConfirmadosNumber"
        style="@style/CasesStyleMinor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120455"
        app:layout_constraintStart_toStartOf="@+id/textViewPais"
        app:layout_constraintTop_toBottomOf="@+id/textViewPais" />

    <ImageView
        android:id="@+id/imageViewFlag"
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/us" />

</androidx.constraintlayout.widget.ConstraintLayout>